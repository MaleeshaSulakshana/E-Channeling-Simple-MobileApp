<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/white_background_with_shadow">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Delete Appointment!"
        android:fontFamily="sans-serif-thin"
        android:textSize="18dp"
        android:background="@drawable/white_background_with_shadow"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/light_red"
        android:text="Once you delete your appointment,you cannot make this time and will re-schedule. Practitioner no longer available!"
        android:fontFamily="sans-serif-thin"
        android:textSize="14dp"
        android:padding="5dp"
        android:background="@drawable/white_background_with_shadow"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@drawable/white_background_with_shadow">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_rounded_btn_background"
            android:textColor="@color/white"
            android:text="Delete"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnNo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_rounded_btn_background"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            app:backgroundTint="@null"/>

    </FrameLayout>

</LinearLayout>